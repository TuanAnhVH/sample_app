<% provide :title, t(".title") %>
<%= link_to t("base.english"), locale: :en %>
<%= link_to t("base.vietnamese"), locale: :vi %>
<h1><%= t ".h1_content" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email, t("base.email") %>
    <%= f.email_field :email, class: "form-control" %>
    <%= f.label :password, t("base.password") %>
    <%= f.password_field :password, class: "form-control" %>
    <%= f.submit t("base.login"), class: "btn btn-primary" %>
    <% end %>
    <p>New user? <%= link_to t(".sign_up_now"), signup_path %></p>
  </div>
</div>
